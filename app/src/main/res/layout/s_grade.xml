<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#994586ef">

        <ImageView
            android:id="@+id/s_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/s_top_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@id/s_back"
            android:gravity="center_vertical"
            android:text="@string/s_course_grade"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/s_refresh"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/s_top_refresh" />
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/s_grade_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#994586ef"
        app:tabIndicatorColor="#998924b7"
        />


    <android.support.v4.view.ViewPager
        android:id="@+id/s_grade_page"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


</LinearLayout>