<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    android:backgroundTint="@color/z_cardViewNewsInfoBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/z_tv_news_info_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/s_label_text"
            android:textSize="18sp"
            android:text="@string/z_news"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/z_cardViewNewsSpilt"
            />


        <TextView
            android:id="@+id/z_tv_news_info_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/s_label_text"
            android:textSize="16sp"
            android:text="@string/z_news"
            />

        <TextView
            android:id="@+id/z_tv_news_info_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:maxLines="1"
            android:layout_marginRight="20dp"
            android:textColor="@color/s_label_text"
            android:textSize="12sp"
            android:text="12-12-12"

            />

    </LinearLayout>

</android.support.v7.widget.CardView>
